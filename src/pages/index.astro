---
import Layout from "../layouts/Layout.astro";
import Feed from "../components/Feed.astro";
import { db } from "../firebase/server";

async function fetchSources(): Promise<string[] | undefined> {

    const querySnapshot = await db?.collection("sources").get();
    const sourcesList = querySnapshot?.docs.map((doc) => doc.data().url) ?? undefined;

    return sourcesList;
}
---

<Layout>
  <Feed sources={await fetchSources()} />
</Layout>
