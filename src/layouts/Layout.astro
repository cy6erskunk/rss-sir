---
import ThemeSwitcher from "../components/ThemeSwitcher.astro";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>RSS,sir</title>
  </head>
  <body>
    <header class="header">
      <div class="logo-container">
        <img
          src={import.meta.env.BASE_URL + "rss-sir-logo.png"}
          alt="RSS,sir logo"
          class="logo"
        />
      </div>
      <h1 class="site-title">RSS, sir</h1>
      <div class="theme-switch-container">
        <ThemeSwitcher />
      </div>
    </header>
    <slot />
  </body>
</html>

<style>
  :root {
    --color-bg: #fff;
    --color-text: #333;
    --color-primary: #3b82f6;
    --color-secondary: #6b7280;
    --color-border: #e5e7eb;
    --color-quote-bg: #f3f4f6;
    --color-quote-border: #d1d5db;
    --color-code-bg: #f1f5f9;
    --color-link: #2563eb;
    --color-link-hover: #1d4ed8;
    --font-sans: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
      Helvetica, Arial, sans-serif;
    --font-mono: ui-monospace, SFMono-Regular, Menlo, Monaco, Consolas,
      "Liberation Mono", "Courier New", monospace;
    --max-width: 768px;
    --border-radius: 8px;
  }

  @media (prefers-color-scheme: dark) {
    :root:is(.dark),
    :root:not(.dark):not(.light) {
      --color-bg: #111827;
      --color-text: #e5e7eb;
      --color-primary: #60a5fa;
      --color-secondary: #9ca3af;
      --color-border: #374151;
      --color-quote-bg: #1f2937;
      --color-quote-border: #4b5563;
      --color-code-bg: #1e293b;
      --color-link: #93c5fd;
      --color-link-hover: #bfdbfe;
    }
  }

  * {
    box-sizing: border-box;
    margin: 0;
    padding: 0;
  }

  body {
    font-family: var(--font-sans);
    background-color: var(--color-bg);
    color: var(--color-text);
    line-height: 1.6;
    padding: 1rem;
  }

  .header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 1rem 2rem;
    margin-bottom: 2rem;
    background-color: var(--color-bg);
    max-width: var(--max-width);
    margin: 0 auto;
  }

  .header .logo-container {
    display: flex;
    align-items: center;
    gap: 1rem;
  }

  .header .logo {
    height: 64px;
    width: auto;
    margin: 0 1em;
  }

  .header .site-title {
    font-size: 1.25rem;
    font-weight: 600;
    color: var(--color-text);
    margin: 0;
  }

  .theme-switch-container {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 64px;
    max-width: var(--max-width);
  }
  :root:not(.dark):not(.light) .theme-switch-container {
    display: none;
  }
</style>
